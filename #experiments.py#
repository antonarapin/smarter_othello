import sys,os

print("\nWeighted Discs Round Robin test\n_______________________________\n")
for i in range(1,5):
    for j in range(1,5):
        print("\nNow Trying agent1 as p1 at d=",i,"and agent2 as p2 at d=",j)
        os.system("python3 playOthello.py -nd -p1 othelloAgent1.py -p2 othelloAgent2.py -p1A "+str(i)+" -p2A "+str(j))
        print("\nNow Trying agent2 as p1 at d=",i,"and agent1 as p2 at d=",j)
        os.system("python3 playOthello.py -nd -p1 othelloAgent2.py -p2 othelloAgent1.py -p1A "+str(i)+" -p2A "+str(j))

